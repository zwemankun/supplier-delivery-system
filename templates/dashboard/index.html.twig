{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 col-lg-2 p-0">
            <div class="sidebar">
                <div class="p-3 text-center">
                    <div class="logo-container mb-3">
                        <a href="{{ path('app_dashboard') }}" class="text-decoration-none">
                         <span>Logo</span>
                         </a>
                    </div>
                </div>
                <div class="list-group list-group-flush">
                    <a href="{{ path('app_supplier') }}" class="list-group-item list-group-item-action bg-light">Suppliers</a>
                    <a href="{{ path('app_product') }}" class="list-group-item list-group-item-action bg-light">Products</a>
                    <a href="{{ path('app_order') }}" class="list-group-item list-group-item-action bg-light">Orders</a>
                    <a href="{{ path('app_delivery') }}" class="list-group-item list-group-item-action bg-light">Deliveries</a>
                    <a href="{{ path('app_customer') }}" class="list-group-item list-group-item-action bg-light">Customers</a>
                </div>
            </div>
        </div>
        <div class="col-md-9 col-lg-10">
            <div class="row py-3 bg-light border-bottom">
                <div class="col-md-6"></div>
                <div class="col-md-6 text-end">
                    <a href="{{ path('app_logout') }}" class="btn btn-light">Logout</a>
                </div>
            </div>
            <div class="row p-4">
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Total Supplier Count</h5>
                            <h2 class="card-text">{{ supplierCount }}</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Total Products</h5>
                            <h2 class="card-text">{{ productCount }}</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Total Pending Orders</h5>
                            <h2 class="card-text">{{ pendingOrderCount }}</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Total Deliveries</h5>
                            <h2 class="card-text">{{ deliveryCount }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Delivery Details{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 p-0">
            <div class="sidebar">
                <div class="p-3 text-center">
                    <div class="logo-container mb-3">
                        <a href="{{ path('app_dashboard') }}" class="text-decoration-none">
                         <span>Logo</span>
                         </a>
                    </div>
                </div>
                <div class="list-group list-group-flush">
                    <a href="{{ path('app_supplier') }}" class="list-group-item list-group-item-action bg-light">Suppliers</a>
                    <a href="{{ path('app_product') }}" class="list-group-item list-group-item-action bg-light">Products</a>
                    <a href="{{ path('app_order') }}" class="list-group-item list-group-item-action bg-light">Orders</a>
                    <a href="{{ path('app_delivery') }}" class="list-group-item list-group-item-action bg-light">Deliveries</a>
                    <a href="{{ path('app_customer') }}" class="list-group-item list-group-item-action bg-light">Customers</a>
                </div>
            </div>
        </div>
         <!-- Main Content -->
                <div class="col-md-10 content-area">
           <div class="header d-flex justify-content-end py-3 px-2">
                <a href="{{ path('app_logout') }}" class="btn btn-light">Logout</a>
            </div>
<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_delivery') }}">Deliveries</a></li>
            <li class="breadcrumb-item active" aria-current="page">View Delivery</li>
        </ol>
    </nav>

    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Delivery Details</h5>
            <div>
                <a href="{{ path('app_delivery_edit', {'id': delivery.id}) }}" class="btn btn-sm btn-light">
                    <i class="bi bi-pencil"></i> Edit
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>ID</th>
                                <td>{{ delivery.id }}</td>
                            </tr>
                            <tr>
                                <th>Unique ID</th>
                                <td>{{ delivery.uniqueId }}</td>
                            </tr>
                            <tr>
                                <th>Order ID</th>
                                <td>{{ delivery.order.id }}</td>
                            </tr>
                            <tr>
                                <th>Tracking Number</th>
                                <td>{{ delivery.trackingNumber ?? 'N/A' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Status</th>
                                <td>
                                    <span class="badge rounded-pill bg-{{ 
                                        delivery.status == 'delivered' ? 'success' : 
                                        delivery.status == 'failed' or delivery.status == 'returned' ? 'danger' : 
                                        delivery.status == 'in_transit' or delivery.status == 'out_for_delivery' ? 'info' : 'warning' 
                                    }}">
                                        {{ delivery.status|capitalize|replace({'_': ' '}) }}
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Delivery Date</th>
                                <td>{{ delivery.deliveryDate ? delivery.deliveryDate|date('Y-m-d') : 'N/A' }}</td>
                            </tr>
                            <tr>
                                <th>Created At</th>
                                <td>{{ delivery.createdAt ? delivery.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Updated At</th>
                                <td>{{ delivery.updatedAt ? delivery.updatedAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="mt-4">
                <a href="{{ path('app_delivery') }}" class="btn btn-secondary">Back to list</a>
                
                <form method="post" action="{{ path('app_delivery_delete', {'id': delivery.id}) }}" 
                      onsubmit="return confirm('Are you sure you want to delete this delivery?');" 
                      class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ delivery.id) }}">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}